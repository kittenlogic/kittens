<%= simple_form_for(@pin, html: {class: "form-horizontal"}) do |f| %>
	<%= f.error_notification %>
	<%= f.full_error :image_file_size, class: "alert alert-danger" %>
	<%= f.full_error :image_content_type, class: "alert alert-danger" %>

	<%= f.input :image, label:"Upload an image" %>
	<%= f.input :description, as: :text, input_html: { rows: "3" } %>
 

  <div class="form-actions well well-lg">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
